{
	"name": "Wiki Email Notification",
	"version": "0.1",
	"author": [
		"Universal Omega",
		"Rob Church",
		"Igor Absorto"
	],
	"license-name": "GPL-2.0-or-later",
	"url": "",
	"descriptionmsg": "wikinotif-desc",
	"type": "other",
	"callback": "WikiNotif::onRegistration",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"MessagesDirs": {
		"NewUserNotif": [
			"i18n"
		]
	},
	"SpecialPages": {
		"WikiNotif": "SpecialWikiNotif"
	},
	"AutoloadClasses": {
		"WikiNotif": "WikiNotif.class.php",
		"SpecialWikiNotif": "SpecialWikiNotif.php" 
	},
	"Hooks": {
		"LocalUserCreated": "WikiNotif::onLocalUserCreated",
		"RevisionFromEditComplete": "WikiNotif::onRevisionFromEditComplete"
	},
	"config": {
		"WikiNotifTargets": {
			"value": [ 1 ],
			"description": "Array containing the usernames or user IDs of those who should receive a notification email. Email will not be sent unless the recipient's email address has been validated, where this is required in the site configuration."
		}
	},
	"manifest_version": 2
}
